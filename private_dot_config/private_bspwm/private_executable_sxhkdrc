# open terminal by $TERM
super + Return
  $TERMINAL

# open rofi
super + z
  rofi -no-lazy-grab -show drun

# open symbols list by rofimoji
super + e
  rofimoji -a copy -f general_punctuation emoji latin-1_supplement greek_and_coptic

# open clipboard history by rofi-greenclip
super + h 
  rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# open powermenu
super + ctrl + x
  powermenu.sh

# open hotkey list
super + ctrl + backslash
  hotkeys.sh

# open flameshot
super + Print
  flameshot gui

# force kill window by xkill
super + shift + k
  xkill

# close/kill window
super + {_, shift + }q
  bspc node -{c,k}

# fullscreen window mode
super + shift + {f,f}
  bspc node -t {fullscreen,tiled}

# floating window mode
super + shift + {t,t}
  bspc node -t {tiled,floating}

# move window/focus
super + {_,shift + }{a,s,w,d}
  bspc node -{f,s} {west,south,north,east}

# switch between two last workspaces
super + Tab
  bspc desktop -f last

# (move window)/switch to selected workspace
super + {_,shift + }{1-6}
  bspc {desktop -f,node -d} {1-6}

# select open window place
super + ctrl + {a,s,w,d}
  bspc node -p {west,south,north,east}

# cancel open window place
super + ctrl + space
  bspc node -p cancel

# enlarge window in selected direction
super + ctrl + shift + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# minimize window in selected direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# moving floating window
super + shift + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

# up volume
XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5%

# down volume
XF86AudioLowerVolume
  pactl set-sink-volume 0 -5%

# mute volume
XF86AudioMute
  pactl set-sink-mute 0 toggle

# up brightness
XF86MonBrightnessUp
  brightnessctl s 10%+

# down brightness
XF86MonBrightnessDown
  brightnessctl s 10%-

# find out the name of the key
super + Escape
  $TERM -e sh -c "xev | awk -F '[ )]+' '/^KeyPress/ \{ a[NR+2] \} NR in a \{ printf \"%-3s %s\n\", \$5, \$8 \}'"

# middle line 
alt + {1,KP_1}
  echo "‒" | xclip -sel clip

# long line 
alt + {2,KP_2}
  echo "—" | xclip -sel clip

# left quotation mark
alt + {3,KP_3}
  echo "«" | xclip -sel clip

# right quotation mark
alt + {4,KP_4}
  echo "»" | xclip -sel clip
